package ninja.trek.cakewood;
import net.minecraft.block.Block;
import net.minecraft.block.BlockState;
import net.minecraft.block.ShapeContext;
import net.minecraft.item.ItemPlacementContext;
import net.minecraft.state.StateManager;
import net.minecraft.state.property.DirectionProperty;
import net.minecraft.state.property.IntProperty;
import net.minecraft.util.ActionResult;
import net.minecraft.util.math.BlockPos;
import net.minecraft.util.math.Direction;
import net.minecraft.util.shape.VoxelShape;
import net.minecraft.util.shape.VoxelShapes;
import net.minecraft.world.BlockView;
import net.minecraft.world.World;
public class CakeWoodCornerBlock extends Block {
    // The overall rotation of the corner block (used to “rotate” the canonical model).
    public static final DirectionProperty FACING = DirectionProperty.of("facing", Direction.Type.HORIZONTAL);
    // For each half, we store the computed “bite state” for the two sides.
    public static final IntProperty TOP_A = IntProperty.of("top_a", 0, 15);
    public static final IntProperty TOP_B = IntProperty.of("top_b", 0, 15);
    public static final IntProperty BOTTOM_A = IntProperty.of("bottom_a", 0, 15);
    public static final IntProperty BOTTOM_B = IntProperty.of("bottom_b", 0, 15);
    public CakeWoodCornerBlock(Settings settings) {
        super(settings);
        setDefaultState(getStateManager().getDefaultState()
                .with(FACING, Direction.NORTH)
                .with(TOP_A, 0)
                .with(TOP_B, 0)
                .with(BOTTOM_A, 0)
                .with(BOTTOM_B, 0));
    }
    @Override
    protected void appendProperties(StateManager.Builder<Block, BlockState> builder) {
        builder.add(FACING, TOP_A, TOP_B, BOTTOM_A, BOTTOM_B);
    }
    @Override
    public BlockState getPlacementState(ItemPlacementContext ctx) {
        World world = ctx.getWorld();
        BlockPos pos = ctx.getBlockPos();
        BlockState defaultState = getDefaultState();
        // Compute the “corner” configuration based on adjacent CakeWood blocks.
        ComputedLayer computed = computeComputedLayer(world, pos);
        if (computed != null) {
            defaultState = defaultState.with(FACING, computed.rotation)
                    .with(TOP_A, computed.topStateNorth)
                    .with(TOP_B, computed.topStateEast)
                    .with(BOTTOM_A, computed.bottomStateNorth)
                    .with(BOTTOM_B, computed.bottomStateEast);
        }
        // Otherwise, we leave the state as default (all zeros will result in a “solid” block).
        return defaultState;
    }
    /**
     * Internal container to hold the computed values for both layers.
     */
    private static class ComputedLayer {
        Direction rotation; // The rotation needed to transform the actual neighbor directions into our canonical (NORTH, EAST) configuration.
        int topStateNorth;
        int topStateEast;
        int bottomStateNorth;
        int bottomStateEast;
    }
    /**
     * Scans the four horizontal neighbors. If exactly two CakeWood blocks are found (that are not fully eaten on at least one half)
     * and they are adjacent (not opposite), then computes for each half the “bite state” for each side as well as the overall rotation.
     * Returns null if the configuration is not valid.
     */
    private ComputedLayer computeComputedLayer(World world, BlockPos pos) {
        // We scan the four horizontal directions.
        NeighborInfo[] found = new NeighborInfo[4];
        int count = 0;
        for (Direction dir : Direction.Type.HORIZONTAL) {
            BlockPos neighborPos = pos.offset(dir);
            BlockState neighborState = world.getBlockState(neighborPos);
            if (neighborState.getBlock() instanceof CakeWoodBlock) {
                // If either half of the CakeWood block is not fully eaten, consider it.
                int topBites = neighborState.get(CakeWoodBlock.TOP_BITES);
                int bottomBites = neighborState.get(CakeWoodBlock.BOTTOM_BITES);
                if (topBites < CakeWoodBlock.MAX_BITES || bottomBites < CakeWoodBlock.MAX_BITES) {
                    found[count++] = new NeighborInfo(dir, neighborState);
                }
            }
        }
        if (count != 2) {
            return null;
        }
        Direction d1 = found[0].direction;
        Direction d2 = found[1].direction;
        // If the two neighbors are opposites, we won’t form a corner.
        if (d1 == d2.getOpposite()) {
            return null;
        }
        // For each neighbor compute the computed state (for top and bottom halves).
        int topState1 = computeNeighborState(found[0].state, found[0].direction, true);
        int topState2 = computeNeighborState(found[1].state, found[1].direction, true);
        int bottomState1 = computeNeighborState(found[0].state, found[0].direction, false);
        int bottomState2 = computeNeighborState(found[1].state, found[1].direction, false);
        // Find a rotation R (one of 0, 90, 180, 270) such that when “undoing” that rotation the two neighbor directions become exactly {NORTH, EAST}.
        // (Our canonical model is defined for NORTH and EAST.)
        for (Direction candidate : Direction.Type.HORIZONTAL) {
            // Rotate the actual neighbor directions by –candidate.
            Direction r1 = rotateDirection(found[0].direction, candidate.getOpposite());
            Direction r2 = rotateDirection(found[1].direction, candidate.getOpposite());
            if ((r1 == Direction.NORTH && r2 == Direction.EAST) || (r1 == Direction.EAST && r2 == Direction.NORTH)) {
                int topNorth, topEast, bottomNorth, bottomEast;
                if (r1 == Direction.NORTH) {
                    topNorth = topState1;
                    bottomNorth = bottomState1;
                    topEast = topState2;
                    bottomEast = bottomState2;
                } else {
                    topNorth = topState2;
                    bottomNorth = bottomState2;
                    topEast = topState1;
                    bottomEast = bottomState1;
                }
                ComputedLayer layer = new ComputedLayer();
                layer.rotation = candidate;
                layer.topStateNorth = topNorth;
                layer.topStateEast = topEast;
                layer.bottomStateNorth = bottomNorth;
                layer.bottomStateEast = bottomEast;
                return layer;
            }
        }
        return null;
    }
    // Helper container to record a neighbor’s direction and state.
    private static class NeighborInfo {
        final Direction direction;
        final BlockState state;
        NeighborInfo(Direction direction, BlockState state) {
            this.direction = direction;
            this.state = state;
        }
    }
    /**
     * Computes the “bite state” for one neighbor CakeWoodBlock.
     * The attached face is the face of the neighbor that touches this corner block.
     *
     * If the CakeWood block’s facing equals the attached face then we return 1.
     * If unbitten (bites==0) then return 0.
     * Otherwise, if partially eaten, then return 2–8 (if the CakeWood’s facing is clockwise relative to the attached face)
     * or 9–15 if counter‐clockwise.
     */
    private static int computeNeighborState(BlockState neighborState, Direction neighborDirection, boolean isTop) {
        int bites = isTop ? neighborState.get(CakeWoodBlock.TOP_BITES) : neighborState.get(CakeWoodBlock.BOTTOM_BITES);
        Direction cakeFacing = isTop ? neighborState.get(CakeWoodBlock.TOP_FACING) : neighborState.get(CakeWoodBlock.BOTTOM_FACING);
        if (bites >= CakeWoodBlock.MAX_BITES) {
            return 1;
        }
        // The attached face is opposite our relative position.
        Direction attachedFace = neighborDirection.getOpposite();
        if (cakeFacing == attachedFace) {
            return 1;
        }
        if (bites == 0) {
            return 0;
        }
        // Determine the relative angle between the attached face and the cakewood block’s facing.
        int attachedAngle = getAngle(attachedFace);
        int facingAngle = getAngle(cakeFacing);
        int delta = facingAngle - attachedAngle;
        while (delta > 180) delta -= 360;
        while (delta < -180) delta += 360;
        if (delta > 0) {
            // “Right side”
            return 2 + (bites - 1); // For bites 1–7 this yields 2–8.
        } else if (delta < 0) {
            // “Left side”
            return 9 + (bites - 1); // For bites 1–7 this yields 9–15.
        }
        return 0;
    }
    private static int getAngle(Direction dir) {
        switch (dir) {
            case NORTH: return 0;
            case EAST:  return 90;
            case SOUTH: return 180;
            case WEST:  return 270;
            default:    return 0;
        }
    }
    /**
     * Rotates the original direction by an angle corresponding to the given rotation direction.
     * (For example, if rotation is EAST, that means “rotate 90° clockwise”.)
     */
    private static Direction rotateDirection(Direction original, Direction rotation) {
        int angle = getAngle(rotation);
        int origAngle = getAngle(original);
        int newAngle = (origAngle + angle) % 360;
        return angleToDirection(newAngle);
    }
    private static Direction angleToDirection(int angle) {
        switch (angle) {
            case 0:   return Direction.NORTH;
            case 90:  return Direction.EAST;
            case 180: return Direction.SOUTH;
            case 270: return Direction.WEST;
            default:  return Direction.NORTH;
        }
    }
    @Override
    public VoxelShape getOutlineShape(BlockState state, BlockView world, BlockPos pos, ShapeContext context) {
        // Build the shape for both layers and union them.
        VoxelShape topShape = getLayerShape(true, state);
        VoxelShape bottomShape = getLayerShape(false, state);
        return VoxelShapes.union(topShape, bottomShape);
    }
    /**
     * Computes the shape for one half (top or bottom) based on the computed state properties.
     * In our canonical orientation (FACING==NORTH) we assume that TOP_A/BOTTOM_A correspond to the “north” side
     * (i.e. affecting the z coordinate) and TOP_B/BOTTOM_B to the “east” side (affecting x).
     * If either state is 1 then we simply return a full half block.
     * Otherwise we “remove” portions along x and z based on the bite state.
     */
    private VoxelShape getLayerShape(boolean isTop, BlockState state) {
        double yMin = isTop ? 0.5 : 0.0;
        double yMax = isTop ? 1.0 : 0.5;
        int stateA = isTop ? state.get(TOP_A) : state.get(BOTTOM_A);
        int stateB = isTop ? state.get(TOP_B) : state.get(BOTTOM_B);
        Direction facing = state.get(FACING);
        // If either side is 1, no corner is formed; render as a full half block.
        if (stateA == 1 || stateB == 1) {
            return VoxelShapes.cuboid(0, yMin, 0, 1, yMax, 1);
        }
        // For state values 2–8, interpret (state – 1) as the number of “bites” missing (divided by 16);
        // for 9–15, use (state – 8). (State 0 means unbitten.)
        double removalA = (stateA >= 2 && stateA <= 8) ? (stateA - 1) / 16.0 : (stateA >= 9 ? (stateA - 8) / 16.0 : 0);
        double removalB = (stateB >= 2 && stateB <= 8) ? (stateB - 1) / 16.0 : (stateB >= 9 ? (stateB - 8) / 16.0 : 0);
        // In the canonical orientation (FACING == NORTH), we “remove” removalA from the north side (z)
        // and removalB from the east side (x). The remaining “cake” extends from (removalB, yMin, removalA) to (1, yMax, 1).
        VoxelShape canonicalShape = VoxelShapes.cuboid(removalB, yMin, removalA, 1, yMax, 1);
        return rotateShapeCanonical(canonicalShape, facing);
    }
    /**
     * Rotates a simple cuboid shape (defined in canonical coordinates) based on the block’s FACING.
     * We perform the rotation manually (using simple coordinate transforms).
     */
    private VoxelShape rotateShapeCanonical(VoxelShape shape, Direction facing) {
        // Get the bounds (we assume our shape is a single cuboid).
        net.minecraft.util.math.Box box = shape.getBoundingBox();
        double minX = box.minX;
        double minY = box.minY;
        double minZ = box.minZ;
        double maxX = box.maxX;
        double maxY = box.maxY;
        double maxZ = box.maxZ;
        double newMinX, newMinZ, newMaxX, newMaxZ;
        switch (facing) {
            case NORTH:
                newMinX = minX; newMaxX = maxX;
                newMinZ = minZ; newMaxZ = maxZ;
                break;
            case EAST:
                newMinX = 1 - maxZ; newMaxX = 1 - minZ;
                newMinZ = minX;     newMaxZ = maxX;
                break;
            case SOUTH:
                newMinX = 1 - maxX; newMaxX = 1 - minX;
                newMinZ = 1 - maxZ; newMaxZ = 1 - minZ;
                break;
            case WEST:
                newMinX = minZ;     newMaxX = maxZ;
                newMinZ = 1 - maxX; newMaxZ = 1 - minX;
                break;
            default:
                newMinX = minX; newMaxX = maxX;
                newMinZ = minZ; newMaxZ = maxZ;
                break;
        }
        return VoxelShapes.cuboid(newMinX, minY, newMinZ, newMaxX, maxY, newMaxZ);
    }
