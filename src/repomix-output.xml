        BlockItem plankCornerItem = createBlockItem(plankCornerBlock, "block.cakewood." + plankCornerId);
        Registry.register(Registries.BLOCK, CakeWood.id(woodCornerId), woodCornerBlock);
        Registry.register(Registries.ITEM, CakeWood.id(woodCornerId), woodCornerItem);
        Registry.register(Registries.BLOCK, CakeWood.id(plankCornerId), plankCornerBlock);
        Registry.register(Registries.ITEM, CakeWood.id(plankCornerId), plankCornerItem);
